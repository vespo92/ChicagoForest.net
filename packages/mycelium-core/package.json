{
  "name": "@chicago-forest/mycelium-core",
  "version": "0.1.0",
  "description": "The neural network substrate of the Chicago Forest - hyphal pathways, signal propagation, and emergent topology",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./hyphal": {
      "import": "./dist/hyphal/index.mjs",
      "require": "./dist/hyphal/index.js",
      "types": "./dist/hyphal/index.d.ts"
    },
    "./signal": {
      "import": "./dist/signal/index.mjs",
      "require": "./dist/signal/index.js",
      "types": "./dist/signal/index.d.ts"
    },
    "./topology": {
      "import": "./dist/topology/index.mjs",
      "require": "./dist/topology/index.js",
      "types": "./dist/topology/index.d.ts"
    },
    "./growth": {
      "import": "./dist/growth/index.mjs",
      "require": "./dist/growth/index.js",
      "types": "./dist/growth/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@chicago-forest/shared-types": "workspace:*",
    "@chicago-forest/p2p-core": "workspace:*",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "files": [
    "dist"
  ]
}
