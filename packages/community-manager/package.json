{
  "name": "@chicago-forest/community-manager",
  "version": "0.1.0",
  "description": "Contributor onboarding, issue triage, PR validation, and community engagement for Chicago Forest Network",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./triage": {
      "import": "./dist/triage/index.mjs",
      "require": "./dist/triage/index.js",
      "types": "./dist/triage/index.d.ts"
    },
    "./onboarding": {
      "import": "./dist/onboarding/index.mjs",
      "require": "./dist/onboarding/index.js",
      "types": "./dist/onboarding/index.d.ts"
    },
    "./metrics": {
      "import": "./dist/metrics/index.mjs",
      "require": "./dist/metrics/index.js",
      "types": "./dist/metrics/index.d.ts"
    },
    "./newsletter": {
      "import": "./dist/newsletter/index.mjs",
      "require": "./dist/newsletter/index.js",
      "types": "./dist/newsletter/index.d.ts"
    },
    "./discussions": {
      "import": "./dist/discussions/index.mjs",
      "require": "./dist/discussions/index.js",
      "types": "./dist/discussions/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@chicago-forest/shared-types": "workspace:*",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "chicago-forest",
    "community-management",
    "contributor-onboarding",
    "issue-triage",
    "pr-validation",
    "engagement"
  ]
}
