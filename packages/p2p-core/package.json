{
  "name": "@chicago-forest/p2p-core",
  "version": "0.1.0",
  "description": "Core P2P networking primitives for Chicago Forest Network",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./identity": {
      "import": "./dist/identity/index.mjs",
      "require": "./dist/identity/index.js",
      "types": "./dist/identity/index.d.ts"
    },
    "./discovery": {
      "import": "./dist/discovery/index.mjs",
      "require": "./dist/discovery/index.js",
      "types": "./dist/discovery/index.d.ts"
    },
    "./connection": {
      "import": "./dist/connection/index.mjs",
      "require": "./dist/connection/index.js",
      "types": "./dist/connection/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@chicago-forest/shared-types": "workspace:*",
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^1.4.0",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "files": [
    "dist"
  ]
}
