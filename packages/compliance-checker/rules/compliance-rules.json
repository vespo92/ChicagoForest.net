{
  "$schema": "./compliance-rules.schema.json",
  "version": "1.0.0",
  "description": "Agent 13: Compliance - Rules configuration for disclaimer enforcement and false claim detection",

  "redLines": {
    "description": "Red line violations - content that MUST NEVER be published",
    "operationalClaims": {
      "severity": "critical",
      "patterns": [
        "working device",
        "working energy device",
        "proven technology",
        "operational system",
        "operational device",
        "operational network",
        "generates power",
        "generates energy",
        "produces energy",
        "produces power",
        "free energy device",
        "over-unity device",
        "perpetual motion"
      ],
      "message": "Claims that suggest the theoretical system is operational or functional"
    },
    "investmentLanguage": {
      "severity": "critical",
      "patterns": [
        "investment opportunity",
        "guaranteed returns",
        "profit potential",
        "financial gain",
        "buy now",
        "limited time offer",
        "act now",
        "don't miss out",
        "exclusive offer",
        "risk-free investment",
        "high returns"
      ],
      "message": "Financial or investment-related language that could mislead users"
    },
    "falsePromises": {
      "severity": "critical",
      "patterns": [
        "will solve",
        "guaranteed to",
        "proven to work",
        "scientifically proven",
        "breakthrough device",
        "revolutionary device",
        "100% effective",
        "works immediately",
        "instant results"
      ],
      "message": "Unsubstantiated promises or false scientific claims"
    }
  },

  "disclaimerRequirements": {
    "description": "Required disclaimers for different content types",
    "contentPages": {
      "required": true,
      "minimumOne": [
        "AI-generated",
        "AI generated",
        "theoretical framework",
        "conceptual framework",
        "not operational",
        "speculative design"
      ],
      "severity": "high",
      "message": "All content pages must include at least one AI/theoretical disclaimer"
    },
    "technicalPages": {
      "required": true,
      "minimumOne": [
        "theoretical",
        "conceptual",
        "proposed",
        "envisioned",
        "speculative"
      ],
      "severity": "high",
      "message": "Technical descriptions must be clearly marked as theoretical"
    }
  },

  "labelRequirements": {
    "description": "Required labels for AI-generated content",
    "aiContentLabel": {
      "pattern": "AI[- ]generated|Generated by AI|Created by AI",
      "required": true,
      "severity": "high",
      "contexts": ["theoretical_content", "system_descriptions", "network_specifications"]
    },
    "theoreticalLabel": {
      "pattern": "theoretical|conceptual|proposed|envisioned",
      "required": true,
      "severity": "medium",
      "contexts": ["technology_descriptions", "system_diagrams", "protocol_specifications"]
    }
  },

  "sourceAttribution": {
    "description": "Requirements for citing sources",
    "trustedDomains": [
      "patents.google.com",
      "doi.org",
      "dx.doi.org",
      "archive.org",
      "web.archive.org",
      "lenr-canr.org",
      "vault.fbi.gov",
      "github.com",
      "teslauniverse.com",
      "infinite-energy.com",
      "arxiv.org",
      "pubmed.ncbi.nlm.nih.gov",
      "nasa.gov",
      "darpa.mil",
      "ieee.org"
    ],
    "suspiciousDomains": [
      "example.com",
      "test.com",
      "localhost",
      "127.0.0.1",
      "placeholder"
    ],
    "claimPatterns": [
      "Tesla (discovered|invented|created|developed|demonstrated)",
      "Mallove (proved|showed|demonstrated|published|wrote)",
      "Moray (built|created|demonstrated|invented)",
      "research (shows|proves|demonstrates|indicates)",
      "studies (show|indicate|suggest|prove)",
      "according to"
    ],
    "requireSourceWithin": 200,
    "message": "Historical claims must include verifiable source links"
  },

  "contentClassification": {
    "description": "Rules for classifying content types",
    "factualIndicators": [
      { "pattern": "patent (US|EP|WO)\\d+", "weight": 3 },
      { "pattern": "DOI:\\s*10\\.\\d+", "weight": 3 },
      { "pattern": "published in \\d{4}", "weight": 2 },
      { "pattern": "according to .+ \\(\\d{4}\\)", "weight": 2 },
      { "pattern": "demonstrated in \\d{4}", "weight": 2 },
      { "pattern": "documented by", "weight": 2 }
    ],
    "theoreticalIndicators": [
      { "pattern": "could potentially", "weight": 2 },
      { "pattern": "might enable", "weight": 2 },
      { "pattern": "theoretically", "weight": 3 },
      { "pattern": "conceptually", "weight": 2 },
      { "pattern": "proposed", "weight": 1 },
      { "pattern": "envisioned", "weight": 2 },
      { "pattern": "framework", "weight": 1 }
    ],
    "aiIndicators": [
      { "pattern": "AI[- ]generated", "weight": 5 },
      { "pattern": "generated by", "weight": 2 },
      { "pattern": "automated analysis", "weight": 2 }
    ]
  },

  "filePatterns": {
    "description": "File patterns to include/exclude from scanning",
    "include": [
      "**/*.md",
      "**/*.tsx",
      "**/*.ts",
      "**/*.html",
      "**/*.json"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.git/**",
      "**/coverage/**",
      "**/*.test.ts",
      "**/*.spec.ts"
    ]
  },

  "severityLevels": {
    "critical": {
      "code": 1,
      "description": "Must be fixed immediately - blocks deployment",
      "exitCode": 1
    },
    "high": {
      "code": 2,
      "description": "Should be fixed before deployment",
      "exitCode": 1
    },
    "medium": {
      "code": 3,
      "description": "Should be addressed when possible",
      "exitCode": 0
    },
    "low": {
      "code": 4,
      "description": "Minor improvement suggested",
      "exitCode": 0
    }
  }
}
