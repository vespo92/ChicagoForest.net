{
  "name": "@chicago-forest/source-verifier",
  "version": "0.1.0",
  "description": "Source verification, URL validation, DOI checking, and patent link verification for Chicago Forest Network",
  "author": "Chicago Forest Network",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "source-verifier": "./dist/cli.js",
    "verify-sources": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validators": {
      "import": "./dist/validators/index.mjs",
      "require": "./dist/validators/index.js",
      "types": "./dist/validators/index.d.ts"
    },
    "./reporters": {
      "import": "./dist/reporters/index.mjs",
      "require": "./dist/reporters/index.js",
      "types": "./dist/reporters/index.d.ts"
    },
    "./checkers": {
      "import": "./dist/checkers/index.mjs",
      "require": "./dist/checkers/index.js",
      "types": "./dist/checkers/index.d.ts"
    },
    "./monitoring": {
      "import": "./dist/monitoring/index.mjs",
      "require": "./dist/monitoring/index.js",
      "types": "./dist/monitoring/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "verify": "tsx src/cli.ts",
    "verify:tesla": "tsx src/cli.ts tesla-patents",
    "verify:fbi": "tsx src/cli.ts fbi-files",
    "verify:lenr": "tsx src/cli.ts lenr-docs"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "peerDependencies": {
    "@chicago-forest/tesla-archive": "workspace:*",
    "@chicago-forest/lenr-database": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@chicago-forest/tesla-archive": {
      "optional": true
    },
    "@chicago-forest/lenr-database": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0",
    "tsx": "^4.7.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "chicago-forest",
    "source-verification",
    "url-validation",
    "doi-resolver",
    "patent-checker",
    "link-validator",
    "tesla-patents",
    "lenr-research",
    "archive-verification"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vespo92/ChicagoForest.net",
    "directory": "packages/source-verifier"
  },
  "bugs": {
    "url": "https://github.com/vespo92/ChicagoForest.net/issues"
  },
  "engines": {
    "node": ">=18"
  }
}
