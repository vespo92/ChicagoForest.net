{
  "name": "@chicago-forest/performance-suite",
  "version": "0.1.0",
  "description": "Performance benchmarking, scalability testing, and regression detection for Chicago Forest Network",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./benchmarks": {
      "import": "./dist/benchmarks/index.mjs",
      "require": "./dist/benchmarks/index.js",
      "types": "./dist/benchmarks/index.d.ts"
    },
    "./profilers": {
      "import": "./dist/profilers/index.mjs",
      "require": "./dist/profilers/index.js",
      "types": "./dist/profilers/index.d.ts"
    },
    "./reporters": {
      "import": "./dist/reporters/index.mjs",
      "require": "./dist/reporters/index.js",
      "types": "./dist/reporters/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "bench": "tsx src/cli.ts"
  },
  "dependencies": {
    "@chicago-forest/shared-types": "workspace:*",
    "@chicago-forest/mycelium-core": "workspace:*",
    "@chicago-forest/p2p-core": "workspace:*",
    "@chicago-forest/canopy-api": "workspace:*",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0",
    "tsx": "^4.7.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "chicago-forest",
    "performance",
    "benchmarking",
    "scalability",
    "profiling",
    "regression-detection"
  ]
}
