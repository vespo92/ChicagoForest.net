{
  "name": "@chicago-forest/hyperswarm-transport",
  "version": "0.1.0",
  "description": "Hyperswarm-based P2P transport with NAT traversal for Chicago Forest Network",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@chicago-forest/p2p-core": "workspace:*",
    "@chicago-forest/shared-types": "workspace:*",
    "hyperswarm": "^4.8.4",
    "hyperdht": "^6.19.0",
    "b4a": "^1.6.7",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "hyperswarm",
    "nat-traversal",
    "p2p",
    "holepunch",
    "dht",
    "mesh-network"
  ]
}
