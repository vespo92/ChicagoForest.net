{
  "name": "@chicago-forest/sentinel",
  "version": "0.1.0",
  "description": "Security orchestration, threat detection, and privacy protection for Chicago Forest Network",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./crypto": {
      "import": "./dist/crypto/index.mjs",
      "require": "./dist/crypto/index.js",
      "types": "./dist/crypto/index.d.ts"
    },
    "./threat": {
      "import": "./dist/threat/index.mjs",
      "require": "./dist/threat/index.js",
      "types": "./dist/threat/index.d.ts"
    },
    "./audit": {
      "import": "./dist/audit/index.mjs",
      "require": "./dist/audit/index.js",
      "types": "./dist/audit/index.d.ts"
    },
    "./privacy": {
      "import": "./dist/privacy/index.mjs",
      "require": "./dist/privacy/index.js",
      "types": "./dist/privacy/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@chicago-forest/shared-types": "workspace:*",
    "@chicago-forest/p2p-core": "workspace:*",
    "@noble/ciphers": "^0.5.0",
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.4.0",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "chicago-forest",
    "security",
    "privacy",
    "encryption",
    "threat-detection",
    "intrusion-detection"
  ]
}
