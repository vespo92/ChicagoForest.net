{
  "name": "@chicago-forest/forest-registry",
  "version": "0.1.0",
  "description": "Decentralized registry for global forest discovery - the DNS of the mycelium network",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./records": {
      "import": "./dist/records/index.mjs",
      "require": "./dist/records/index.js",
      "types": "./dist/records/index.d.ts"
    },
    "./resolver": {
      "import": "./dist/resolver/index.mjs",
      "require": "./dist/resolver/index.js",
      "types": "./dist/resolver/index.d.ts"
    },
    "./replication": {
      "import": "./dist/replication/index.mjs",
      "require": "./dist/replication/index.js",
      "types": "./dist/replication/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@chicago-forest/shared-types": "workspace:*",
    "@chicago-forest/p2p-core": "workspace:*",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "files": [
    "dist"
  ]
}
