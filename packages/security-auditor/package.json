{
  "name": "@chicago-forest/security-auditor",
  "version": "0.1.0",
  "description": "Continuous security analysis, vulnerability scanning, and cryptographic validation for Chicago Forest Network",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./scanners": {
      "import": "./dist/scanners/index.mjs",
      "require": "./dist/scanners/index.js",
      "types": "./dist/scanners/index.d.ts"
    },
    "./validators": {
      "import": "./dist/validators/index.mjs",
      "require": "./dist/validators/index.js",
      "types": "./dist/validators/index.d.ts"
    },
    "./analyzers": {
      "import": "./dist/analyzers/index.mjs",
      "require": "./dist/analyzers/index.js",
      "types": "./dist/analyzers/index.d.ts"
    },
    "./owasp": {
      "import": "./dist/owasp/index.mjs",
      "require": "./dist/owasp/index.js",
      "types": "./dist/owasp/index.d.ts"
    },
    "./simulator": {
      "import": "./dist/simulator/index.mjs",
      "require": "./dist/simulator/index.js",
      "types": "./dist/simulator/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "audit": "tsx src/cli.ts"
  },
  "dependencies": {
    "@chicago-forest/shared-types": "workspace:*",
    "@chicago-forest/sentinel": "workspace:*",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0",
    "tsx": "^4.7.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "chicago-forest",
    "security-audit",
    "vulnerability-scanning",
    "cryptographic-validation",
    "owasp",
    "secret-detection"
  ]
}
